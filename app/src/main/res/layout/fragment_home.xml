<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2eae3"
    android:fillViewport="true"
    android:id="@+id/scrollView_home">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/activity_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_borders"
                android:gravity="center"
                android:text="Your activity today"
                android:textColor="#51443c" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/piechart"
                android:layout_width="match_parent"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_height="250dp" />

            <Button
                android:id="@+id/bestFriends_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_borders"
                android:gravity="center"
                android:text="Your best friends"
                android:textColor="#51443c" />

            <ListView
                android:id="@+id/favoritePeople_list"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

</ScrollView>
