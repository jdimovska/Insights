<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2eae3"
    android:fillViewport="true"
    android:id="@+id/scrollView_home">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/activity_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_borders"
                android:gravity="center"
                android:clickable="false"
                android:text="Your activity today"
                android:textColor="#51443c" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/piechart"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="350dp" />

            <Button
                android:id="@+id/unlockedTimes_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_borders"
                android:gravity="center"
                android:clickable="false"
                android:paddingLeft="10dp"
                android:text="Today you have unlocked your phone"
                android:textColor="#51443c"
                android:layout_marginBottom="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <Button
                android:id="@+id/bestFriends_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_borders"
                android:gravity="center"
                android:clickable="false"
                android:text="Your best friends"
                android:textColor="#51443c" />

            <ListView
                android:id="@+id/favoritePeople_list"
                android:clickable="false"
                android:layout_width="fill_parent"
                android:layout_gravity="top"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="true">

            </ListView>

            </LinearLayout>

        </LinearLayout>


</ScrollView>
