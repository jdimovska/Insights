<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/incomingFrequency_btn_messages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F2AE72"
            android:textColor="#fff"
            android:text="Incoming messages frequency"/>

        <LinearLayout
            android:id="@+id/incomingFrequency_layout_messages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.github.mikephil.charting.charts.PieChart
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="350sp"
                android:id="@+id/idPieChartIncomingFrequency_messages"></com.github.mikephil.charting.charts.PieChart>

        </LinearLayout>

        <Button
            android:id="@+id/outgoingFrequency_btn_messages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:background="#588C9B"
            android:text="Outgoing messages frequency"/>

        <LinearLayout
            android:id="@+id/outgoingFrequency_layout_messages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.github.mikephil.charting.charts.PieChart
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="350sp"
                android:id="@+id/idPieChartOutgoingFrequency_messages"></com.github.mikephil.charting.charts.PieChart>

        </LinearLayout>


        <Button
            android:id="@+id/incomingSize_btn_messages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:background="#72584D"
            android:text="Incoming messages size"/>

        <LinearLayout
            android:id="@+id/incomingSize_layout_messages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.github.mikephil.charting.charts.PieChart
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="350sp"
                android:id="@+id/idPieChartIncomingSize_messages"></com.github.mikephil.charting.charts.PieChart>

        </LinearLayout>

        <Button
            android:id="@+id/outgoingSize_btn_messages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D96459"
            android:textColor="#fff"
            android:text="Outgoing messages size"/>

        <LinearLayout
            android:id="@+id/outgoingSize_layout_messages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.github.mikephil.charting.charts.PieChart
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="350sp"
                android:id="@+id/idPieChartOutgoingSize_messages"></com.github.mikephil.charting.charts.PieChart>

        </LinearLayout>

    </LinearLayout>
</ScrollView>